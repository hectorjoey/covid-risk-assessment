<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activities.SplashActivity">

    <ImageView
        android:id="@+id/covid_image"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/covid" />

    <LinearLayout
        android:layout_below="@+id/covid_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_covid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="COVID-19"
            android:textColor="#4cbbb9"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/risk_assessment_tool"
            android:textColor="#4cbbb9"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:textSize="33sp"
        android:padding="6dp"
        android:text="Powered by"/>
    
    <ImageView
        android:layout_toRightOf="@id/power"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:padding="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/fhilogo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@id/power" />

    
</RelativeLayout>